<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="psimos.jacob.dashboard.MainActivity"
    android:background="@android:color/black">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="BlueTooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textSize="30sp"
                android:textColor="@android:color/holo_blue_light" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="Connect"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btnConnectBT" />

            <Button
                android:text="Disconnect"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btnAbortBT"
                android:enabled="false" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textSize="30sp"
                android:textColor="@android:color/holo_blue_light" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="Dashboard"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btnDash"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Radio"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btnXMRadio" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textSize="30sp"
                android:textColor="@android:color/holo_blue_light" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="Diagnostics"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btnDiagnostics" />

            <Button
                android:text="Ding Dong"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btnDingDong" />

        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_span="2"
                android:id="@+id/txtBT"
                android:background="@drawable/border"
                android:textColor="@android:color/holo_blue_bright"
                android:minLines="500"
                android:textSize="18sp"
                android:scrollbars="vertical"
                android:scrollbarStyle="insideOverlay"
                android:fadeScrollbars="true"
                android:fadingEdge="vertical"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
